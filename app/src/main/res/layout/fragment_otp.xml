<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OTPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="OTP Verification"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_code" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:text="Enter OTP"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="An 4 digit code has been sent to your email"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:background="@drawable/otpshape"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:text="1" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:background="@drawable/otpshape"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:text="0" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:background="@drawable/otpshape"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:text="8" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:background="@drawable/otpshape"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:text="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't reciever the OTP? "
                android:textColor="@color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="#00FFFFFF"
                android:text="Resend OTP"
                android:textAllCaps="false"
                android:textColor="#FFB537"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradientcl"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/hinhtron"
            android:scaleType="centerCrop"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>